<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.activitytracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ActivityTracker">
        <activity android:name=".WelcomeActivity"></activity>
        <activity android:name=".NewGoalActivity"></activity>
        <activity android:name=".NewUserActivity"></activity>
        <activity android:name=".RegisterUserActivity"></activity>
        <activity android:name=".MainGoalActivity"></activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".ProfileActivity"></activity>

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" />
    </application>

</manifest>