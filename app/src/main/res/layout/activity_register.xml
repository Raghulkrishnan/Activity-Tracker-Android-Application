<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/loginHeadImage"
                android:layout_width="219dp"
                android:layout_height="90dp"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:elevation="2dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/textView"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/Fname" />

            <EditText
                style="@style/loginPageStyle"
                android:id="@+id/fname"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="enter first name.."
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:inputType="textPersonName"/>

            <TextView
                android:id="@+id/textView2"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/LName" />

            <EditText
                style="@style/loginPageStyle"
                android:id="@+id/lname"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="enter last name.."
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:inputType="textPersonName"/>

            <TextView
                android:id="@+id/textView3"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/Gender" />

            <RadioGroup
                android:id="@+id/radioGrp"
                android:layout_width="197dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:checked="true"
                    android:text="Male"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <RadioButton
                    android:id="@+id/radioF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:checked="false"
                    android:text="Female"
                    android:textColor="@color/black"
                    android:textSize="16dp" />
            </RadioGroup>

            <TextView
                android:id="@+id/textView4"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="Age" />

            <Spinner
                android:id="@+id/ageSpinner"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/textView5"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/createUName" />

            <EditText
                style="@style/loginPageStyle"
                android:id="@+id/newUName"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="create username.."
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:inputType="textPersonName"/>

            <TextView
                android:id="@+id/textView6"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/createPwd" />

            <EditText
                style="@style/loginPageStyle"
                android:id="@+id/newPwd"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="create password.."
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:inputType="textPassword"/>

            <TextView
                android:id="@+id/textView7"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="italic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textAlignment="center"
                android:text="@string/confirmPwd" />

            <EditText
                style="@style/loginPageStyle"
                android:id="@+id/confirmPwd"
                android:ems="10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="confirm password.."
                android:layout_gravity="center"
                android:textColorHint="@color/black"
                android:inputType="textPassword"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/backToLoginBtn"
                    android:layout_marginStart="50dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onBackToLoginBtnClick"
                    android:text="Cancel"
                    android:backgroundTint="@color/teal_700"
                    android:layout_marginTop="8dp"
                    android:textColor="#19081C"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/registerBtn"
                    android:layout_marginStart="60dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="onRegisterBtnClick"
                    android:text="@string/singUpBtn"
                    android:backgroundTint="@color/teal_700"
                    android:layout_marginTop="8dp"
                    android:textColor="#19081C"
                    android:textSize="16dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>