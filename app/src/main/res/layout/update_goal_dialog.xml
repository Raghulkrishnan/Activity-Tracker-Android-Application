<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_bg">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <Spinner
                android:id="@+id/updateGoalName"
                android:layout_width="316dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="10dp"
                android:entries="@array/goals" />

            <Spinner
                android:id="@+id/updateGoalRoutine"
                android:layout_width="316dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="10dp"
                android:entries="@array/goalRoutines" />

            <Spinner
                android:id="@+id/updateGoalStatus"
                android:layout_width="316dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="10dp"
                android:entries="@array/goalStatus" />

            <EditText
                android:id="@+id/updateGoalFeedback"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="25dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="FEEDBACK"
                android:inputType="textMultiLine" />

            <RatingBar
                android:id="@+id/updateGoalRatingBar"
                android:layout_width="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_height="47dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp" />

            <Button
                android:id="@+id/updateGoalBtn"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="UPDATE" />

            <Button
                android:id="@+id/deleteExistingGoal"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="DELETE" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>